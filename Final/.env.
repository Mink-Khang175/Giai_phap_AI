# Copy this file to `.env` and fill in your own keys before running `python3 app.py`.

# API key cho mô hình sinh mô tả/khuyến nghị (ví dụ OpenAI).
GEN_AI_API_KEY=sk-your-openai-key

# Tùy chọn override model hoặc endpoint (giữ nguyên nếu dùng mặc định).
GEN_AI_MODEL=gpt-4o-mini
GEN_AI_API_URL=https://api.openai.com/v1/chat/completions

# (Optional) Unsplash Access Key để lấy ảnh sản phẩm rõ nét.
UNSPLASH_ACCESS_KEY=your-unsplash-key
